<Page x:Class="PzProject.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:PzProject"

      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="360" d:DesignWidth="1000"
      Title="MainPage">


    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Repertuar" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"/>

        <TabControl Grid.Row="1" 
                    Padding="10">
            
            <TabItem Header="1" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="2" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="3" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="4" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="5" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="6" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

            <TabItem Header="7" 
                     Background="Gray" 
                     Margin="2">
                <ListView
                    Margin="10"
                    ItemTemplate="{StaticResource MovieItemDataTemplate}"
                    ItemsSource="{Binding MovieList}"/>
            </TabItem>

        </TabControl>
    </Grid>

</Page>



