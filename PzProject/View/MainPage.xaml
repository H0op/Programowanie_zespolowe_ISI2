<Page x:Class="PzProject.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:PzProject"

      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="360" d:DesignWidth="1000"
      Title="MainPage">

    <Page.Resources>

        <DataTemplate x:Key="MovieItemDataTemplate">
            <Border Margin="0">
                <Grid Background="CornflowerBlue">
                    <StackPanel>
                        <Image MinWidth="100" MaxHeight="200" Source="{Binding ImageSrc, Converter={ StaticResource ImageConverter}}"/>
                        <TextBlock Text="{Binding Name, FallbackValue='movie name'}" />
                        <TextBlock Text="{Binding Description, FallbackValue='description'}" />
                        <TextBlock Text="{Binding Length, FallbackValue='length'}" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </Page.Resources>
    <Grid Background="Coral">

        <ListView x:Name="listView"
                  HorizontalAlignment="Left"
                  Height="340"
                  Margin="10,10,0,0"
                  VerticalAlignment="Top"
                  Width="980" 
                  ItemTemplate="{StaticResource MovieItemDataTemplate}"
                  ItemsSource="{Binding MovieList}"
        />

    </Grid>
</Page>



